<resources>

    <style name="xuiAppTheme" parent="XUITheme.Tablet.Big">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="LightEditText">
        <item name="colorControlNormal">@color/white_transparent</item>
        <item name="colorControlActivated">@color/white_transparent</item>
        <item name="colorControlHighlight">@color/white_transparent</item>
        <item name="android:textColor">@color/white_transparent</item>
        <item name="android:textColorHint">@color/white_transparent</item>
    </style>

    <style name="ButtonView.Orange">
        <item name="textSolidColor">@color/darkorange</item>
        <item name="textSelectedSolidColor">@color/orange</item>
        <item name="android:text">@string/xui_lab_button_reset</item>
    </style>

    <style name="RoundButton.Orange">
        <item name="rb_backgroundColor">@color/orange</item>
        <item name="rb_borderWidth">0dp</item>
        <item name="android:text">@string/xui_lab_button_reset</item>
        <item name="android:textColor">@color/xui_default_round_btn_white_text</item>
    </style>

    <style name="RoundButton.Red">
        <item name="rb_backgroundColor">@color/red</item>
        <item name="rb_borderWidth">0dp</item>
        <item name="android:text">@string/xui_lab_button_reset</item>
        <item name="android:textColor">@color/darkorange</item>
    </style>
</resources>
